<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipe_step_details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <TextView
                android:id="@+id/recipe_step_header"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:layout_height="30dp"
                tools:text="Adding a pinch of salt"
                android:gravity="center_vertical"
                android:elevation="@dimen/margin_small"
                tools:targetApi="lollipop" />
    
            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/video_player"
                android:layout_width="match_parent"
                android:layout_height="@dimen/video"
                app:use_artwork="true"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:elevation="@dimen/margin_small"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/step_description"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:padding="@dimen/margin_normal"
                        android:gravity="center_vertical" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <TextView
                        android:id="@+id/recipe_step_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/padding_small"
                        tools:text="Ashafa Muhammad Suraju"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>
