<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.kafilicious.abdul.bakingapp.ui.RecipesListActivity">

    <!--
    This layout is a two-pane layout for the Recipe
    master/detail flow.
    
    -->

   <include
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1.6"
       layout="@layout/recipe_list_content_detail"/>

    <include
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.05"
        layout="@layout/recipe_detail_fragment"/>

</LinearLayout>
